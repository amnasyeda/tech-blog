<article class="post">
    <div class="title">
        <p>{{title}}</p>
    </div>
    <div class="content">
        <p>{{content}}</p>
    </div>
    <div class="meta">
        Posted by {{user.username}} on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article> 